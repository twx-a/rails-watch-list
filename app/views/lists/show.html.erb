<h1>List: <%= @list.name %></h1>
<div class="navbar">
  <p>Movies: </p>
  <%= link_to "Add movies", new_list_bookmark_path(@list), class: "btn btn-outline-primary hoverable"%>
</div>
<div class="row">
  <% @list.movies.each do |movie| %>
    <div class="card col-12 m-3 pt-3" style="width: 30rem;">
      <div class="d-flex justify-content-center"><img src = "<%= movie.poster_url %>" class="float-center" style="width: 200px; height: 300px;" ></div>
      <div class="card-body">
        <div class="card-text">
          <p class="text-center"><strong> <%= movie.title %> </strong> </p>
          <p>  <em>Movie Overview</em> >>> </p>
          <div class="border border-solid rounded shadow p-3 mb-4 bg-body rounded"> <%= movie.overview %> </div>
          <p> Ratings: <%= movie.rating %> </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
