<div class ="banner"
  style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('<%= cl_image_path @list.photo.key? ? @list.photo.key : "def-image_k4hgrm"  %>' ) " >
  <h1>List: <%= @list.name %></h1>
</div>
<hr>
<div class="navbar">
  <h2>Movies: </h2>
  <%= link_to "Add movies", new_list_bookmark_path(@list), class: "btn btn-outline-primary hoverable"%>
</div>
<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card col-12 m-3 pt-3" style="width: 30rem;">
      <div class="d-flex justify-content-center">
        <img src = "<%= bookmark.movie.poster_url %>" class="float-center" style="width: 200px; height: 300px;" >
      </div>
      <div class="card-body">
        <div class="card-text">
          <p class="text-center"><strong> <%= bookmark.movie.title %> </strong> </p>
            <p> <em>Movie Overview</em> >>> </p>
          <div class="border border-solid rounded shadow p-3 mb-4 bg-body rounded">
            <p> <%= bookmark.movie.overview %> </p>
            <div>
              <hr>
              <p class ="border border-solid p-2 rounded-pill bg-light bg-opacity-75"><em>Comment: <%= bookmark.comment %> </em> </p>
            </div>
          </div>
          <div class="navbar">
            <p> Ratings: <%= bookmark.movie.rating %> </p>
            <div>
              <p>
                <%= link_to "Edit Comment",
                edit_bookmark_path(bookmark), class: "btn" %> |
                <%= link_to "Delete Bookmark",
                bookmark_path(bookmark),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
