<div class="banner">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<hr>
<p><strong>List:</strong></p>
<div class="row justify-content-center">
  <% @lists.each do |list| %>
    <div class="card col-12 col-md-6 col-xl-2 m-2 pt-3 bg-for-card">
      <div id="list-button-center">
        <%= link_to list.name, list_path(list), class: "btn btn-outline-success col-8", style: "width: 8rem"  %>
      </div>
      <div id="list-button-end">
        <%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-warning col-8", style: "width: 8rem"  %>
      </div>
    </div>
  <% end %>
</div>
